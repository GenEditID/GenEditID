<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<body>
<div metal:use-macro="load: ../layout.pt">
    <div metal:fill-slot="content">
        <div class="content">
        
            <h1>${project.geid}</h1>

            <form id="edit_project_form" method="post" action="${request.route_url('project_edit', projectid=project.id)}">

                <table>
                    <tr>
                        <td>GEID:</td>
                        <td>
                            <input id="geid_text_field" type="text" name="geid" maxlength="10" value="${project.geid}"></input>
                        </td>
                    </tr>
                    <tr>
                        <td>Name:</td>
                        <td>
                            <input id="name_text_field" type="text" name="name" maxlength="64" value="${project.name}"></input>
                        </td>
                    </tr>
                </table>
                
                <p>
                    <input type="submit" name="submit" value="Update"></input>
                </p>
    
                <!-- <div tal:replace="structure edit_form"></div> -->
            </form>

            <hr/>
            
            <p>            
                <a href="${request.route_url('projects')}">Back to projects list</a>
            </p>
        </div>
    </div>
</div>
</body>
</html>
