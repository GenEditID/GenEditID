<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<div metal:use-macro="load: ../layout.pt">
    <div metal:fill-slot="content">
        <div class="content">

            <h1>Genome Editing Project ${project.geid}</h1>

            <h2>Overview</h2>
            <p>
                <a href="${request.route_url('project_edit', projectid=project.id)}">Edit this project</a>
            </p>
            
            <h3> project details</h3>
            <table>
                <tr>
                    <td>Internal Identifier:</td>
                    <td>${project.geid}</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>${project.name}</td>
                </tr>
                <tr>
                    <td>Start date:</td>
                    <td>${project.start_date}</td>
                </tr>
                <tr>
                    <td>End date:</td>
                    <td>${project.end_date}</td>
                </tr>
            </table>

            <h3>targets</h3>
            <h3>guides</h3>
            <h3>guide mismatches</h3>
            <h3>plate layouts</h3>
            <hr/>

            <h2>Results</h2>

            <div tal:condition="cellgrowthplot">
                <h3>Cell Growth</h3>

                <div id="cellgrowth" class="cellgrowth">
                    ${structure: cellgrowthplot}
                </div>
            </div>

            <div tal:condition="proteinabundanceplot">
                <h3>Protein Abundance</h3>

                <div id="proteinabundance" class="proteinabundance">
                    ${structure: proteinabundanceplot}
                </div>
            </div>

            <hr/>

            <h2>Sample analysis</h2>

            <h3>score on plates</h3>

            <h3>data table</h3>
            <table id="contenttable">
                <thead>
                    <th tal:repeat="header column_headers">${header}</th>
                </thead>
                <tr tal:repeat="row rows">
                    <td tal:repeat="cell row">${cell}</td>
                </tr>
            </table>

            <hr/>

            <p>
                <a href="${request.route_url('home')}">Back to projects list</a>
            </p>

            <hr />

        </div>
    </div>
</div>
<script>
$(document).ready(
    function()
    {
        $('#contenttable').DataTable(
        {
        });
    }
);
</script>
