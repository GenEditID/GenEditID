<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<body>
<div metal:use-macro="load: ../layout.pt">
    <div metal:fill-slot="content">
        <div class="content">
        
            <h1>${project.geid}</h1>
        
            <table>
                <tr>
                    <td>Internal Identifier:</td>
                    <td>${project.geid}</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>${project.name}</td>
                </tr>
                <tr>
                    <td>Start date:</td>
                    <td>${project.start_date}</td>
                </tr>
                <tr>
                    <td>End date:</td>
                    <td>${project.end_date}</td>
                </tr>
            </table>

            <p>
                <a href="${request.route_url('project_edit', projectid=project.id)}">Edit this project</a>
            </p>

            <h2>Layouts and Plates</h2>
            
            <p>
                Select an experiment layout to view, or a plate to upload IncuCyte or InCell Western data.
            </p>
            
            <ul>
                <li tal:repeat="layout project.experiment_layouts">
                    <a href="${request.route_url('experiment_view', layoutid=layout.id)}">
                        ${layout.geid}
                    </a>
                    
                    <ul>
                        <li tal:repeat="plate layout.plates">
                            <a href="${request.route_url('plate_load', plateid=plate.id)}">
                                ${plate.geid}
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
            
            <h2>Plots</h2>
            
            <div tal:condition="cellgrowthplot">
                <h3>Cell Growth</h3>
    
                <div id="cellgrowth" class="cellgrowth">
                    ${structure: cellgrowthplot}
                </div>
            </div>
    
            <div tal:condition="proteinabundanceplot">
                <h3>Protein Abundance</h3>
    
                <div id="proteinabundance" class="proteinabundance">
                    ${structure: proteinabundanceplot}
                </div>
            </div>
    
            <hr/>
            
            <p>            
                <a href="${request.route_url('projects')}">Back to projects list</a>
            </p>
        </div>
    </div>
</div>
</body>
</html>
