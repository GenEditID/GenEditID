<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<body>
<div metal:use-macro="load: ../layout.pt">
    <div metal:fill-slot="content">
        <div class="content">
        
            <h1>${project.geid}</h1>
        
            <table>
                <tr>
                    <td>Internal Identifier:</td>
                    <td>${project.geid}</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>${project.name}</td>
                </tr>
                <tr>
                    <td>Start date:</td>
                    <td>${project.start_date}</td>
                </tr>
                <tr>
                    <td>End date:</td>
                    <td>${project.end_date}</td>
                </tr>
            </table>

            <p>
                <a href="${request.route_url('project_edit', projectid=project.id)}">Edit this project</a>
            </p>

            <h2>Experiments</h2>
            
            <p>
                Select an experiment layout to view.
            </p>
            
            <ul>
                <li tal:repeat="layout project.experiment_layouts">
                    <a href="${request.route_url('experiment_view', layoutid=layout.id)}">
                        ${layout.geid}
                    </a>
                </li>
            </ul>

            <hr/>
            
            <p>            
                <a href="${request.route_url('projects')}">Back to projects list</a>
            </p>
        </div>
    </div>
</div>
</body>
</html>
