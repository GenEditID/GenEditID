<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<body>
<div metal:use-macro="load: ../layout.pt">
    <div metal:fill-slot="content">
        <div class="content">
        
            <h1>${layout.project.geid} Experiment ${layout.geid}</h1>
        
            <h2>Plates</h2>
            
            <ul>
                <li tal:repeat="plate layout.plates">
                    ${plate.geid}
                </li>
            </ul>

            <h2>Plots</h2>
            
            <div tal:condition="cellgrowthplot">
                <h3>Cell Growth</h3>
    
                <div id="cellgrowth" class="cellgrowth">
                    ${structure: cellgrowthplot}
                </div>
            </div>

            <div tal:condition="proteinabundanceplot">
                <h3>Protein Abundance</h3>
    
                <div id="proteinabundance" class="proteinabundance">
                    ${structure: proteinabundanceplot}
                </div>
            </div>

            <hr/>
            
            <p>            
                <a href="${request.route_url('project_view', projectid=layout.project.id)}">Back to project</a>
            </p>
        </div>
    </div>
</div>
</body>
</html>
